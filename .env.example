# NegotiBot AI Full Implementation - Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=NegotiBot AI Full Implementation
APP_DESCRIPTION=Complete AI-powered marketplace negotiation platform
APP_VERSION=2.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8001
RELOAD=true
LOG_LEVEL=info

# ===========================================
# AI SERVICE CONFIGURATION - GEMINI ONLY
# ===========================================

# Google Gemini AI (Only AI Service)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# AI Configuration
AI_RESPONSE_TIMEOUT=30
AI_MAX_RETRIES=3
AI_FALLBACK_ENABLED=true

# ===========================================
# WEB SCRAPING CONFIGURATION
# ===========================================

# Basic Scraping Settings
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY=2
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ===========================================
# MARKETPLACE SPECIFIC SETTINGS
# ===========================================

# OLX Configuration
OLX_BASE_URL=https://www.olx.in
OLX_RATE_LIMIT=1

# Facebook Marketplace Configuration  
FACEBOOK_BASE_URL=https://www.facebook.com/marketplace
FACEBOOK_API_ENABLED=false
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Quikr Configuration
QUIKR_BASE_URL=https://www.quikr.com
QUIKR_RATE_LIMIT=1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Primary Database (JSON for simplicity, can be upgraded to SQL)
DATABASE_TYPE=json
DATABASE_PATH=./data

# SQLite Configuration (Alternative)
SQLITE_ENABLED=false
SQLITE_PATH=./data/negotibot.db

# Redis Configuration (for session storage and caching)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# NEGOTIATION ENGINE SETTINGS
# ===========================================

# Strategy Configuration
DEFAULT_OPENING_PERCENTAGE=0.7
MAX_NEGOTIATION_ROUNDS=10
MIN_CONFIDENCE_THRESHOLD=0.3
HANDOFF_TRIGGER_THRESHOLD=0.2

# Tactic Effectiveness Weights
TACTIC_ANCHORING_WEIGHT=0.8
TACTIC_SCARCITY_WEIGHT=0.6
TACTIC_URGENCY_WEIGHT=0.7
TACTIC_RECIPROCITY_WEIGHT=0.8
TACTIC_BUNDLING_WEIGHT=0.5

# Market Intelligence
MARKET_ANALYSIS_ENABLED=true
PRICE_COMPARISON_THRESHOLD=0.2
SIMILAR_PRODUCTS_LIMIT=10

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=*
ENABLE_CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# MONITORING AND LOGGING
# ===========================================

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/negotibot.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Analytics and Metrics
ANALYTICS_ENABLED=true
METRICS_EXPORT_ENABLED=false
PROMETHEUS_PORT=8002

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=5.0

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Email Notifications (Optional)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@negotibot.ai

# Webhook Notifications (Optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# ===========================================
# ADVANCED FEATURES
# ===========================================

# Basic Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Simple Analytics
BASIC_ANALYTICS=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Testing
TESTING=false
TEST_DATABASE_PATH=./test_data
MOCK_SCRAPING=false
MOCK_AI_RESPONSES=false

# Development Tools
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_PROFILER=false

# ===========================================
# DEPLOYMENT SETTINGS
# ===========================================

# Production Settings
PRODUCTION=false
WORKERS=4
MAX_WORKERS=8

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION=7

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem